                    var customer_name = $("<td> </td>");
                    var product_name = $("<td></td>");
                    var amount = $("<td>رکوردی یافت نشد</td>");
                    var pricePerUnit = $("<td> </td>");
                    var pricePerKilo = $("<td> </td>");
                    var totalPrice = $("<td> </td>");
